<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="15dp"
    android:paddingLeft="10dp"
    >

    <ImageView
        android:layout_alignParentStart="true"
        android:id="@+id/frienditem_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_toRightOf="@id/frienditem_imageview"
        android:layout_marginLeft="10dp"
        android:id="@+id/frienditem_textview"
        android:text="이름"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/frienditem_notice"
        android:layout_toRightOf="@id/frienditem_textview"
        android:layout_marginTop="4.5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_notice"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/frienditem_lastmsg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="마지막 메시지"
        android:layout_toRightOf="@id/frienditem_imageview"
        android:layout_below="@+id/frienditem_textview"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />
</RelativeLayout>