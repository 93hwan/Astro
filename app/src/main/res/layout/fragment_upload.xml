<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/uploadfragment_imageview"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/icon_picture" />


    <EditText
        android:id="@+id/uploadfragment_tag"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/set_btn_background"
        android:gravity="top"
        android:hint="Tag ( ex : #keyword ) "
        android:inputType="textMultiLine|textNoSuggestions"
        android:lines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/uploadfragment_content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/set_btn_background"
        android:gravity="start"
        android:hint="Content"
        android:inputType="textMultiLine|textNoSuggestions"
        android:lines="4"
        android:padding="5dp" />

    <Button
        android:id="@+id/uploadfragment_upload"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/set_btn_background"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="#a100ff" />

</LinearLayout>