<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msgitem_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingLeft="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/msgitem_linearLayout_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/msgitem_imageview_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msgitem_textView_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메세지" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/msgitem_readCounter_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/msgitem_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2011.11.11 11:11"
                android:textColor="@android:color/darker_gray"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/msgitem_readCounter_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="9dp"
                android:visibility="invisible"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>